.demo-list {
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    box-sizing: border-box;
    margin-top: 30rpx;
    padding: 0 20rpx;
}

.demo-title {
    display: demo;
    width: 100%;
    padding-bottom: 0.5em;
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    border-bottom: 1rpx solid #eee;
}

.demo-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 20rpx 0;
    border-bottom: 1rpx solid #eee;
}

.demo-item-desc {
    max-width: calc(100% - 50rpx);
    font-weight: 400;
    font-size: 32rpx;
    color: #333;
    overflow-x: scroll;
}

.icon-arrow-right {
    color: #ccc;
}